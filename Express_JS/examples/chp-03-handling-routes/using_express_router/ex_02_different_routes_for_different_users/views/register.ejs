<%- include("./header.ejs") %>
<%- include("./navbar.ejs") %>
    <li class="nav-item"><a href="/accomodation" class="nav-link">Accomodations</a></li>
    <li class="nav-item"><a href="/host/register" class="nav-link">Want to be a host?</a></li>
    <li class="nav-item"><a href="/login" class="nav-link">Register/Log In</a></li>
  </ul>
</nav>
<main class="main">
  <section class="sec" id="sec1">
    <h1 class="page-title"><%= pageTitle %></h1>
    <div class="registration">
      <h4>Enter the follwing details -</h4>
      <form action="<% if(userType === 'user'){ %>/register<% }else{ %>/host/register<% } %>" method="post">
        <div class="form-group">
          <label for="username" class="form-label">Username</label> <br>
          <input type="text" name="username" id="username" class="form-control" placeholder="enter your username">
        </div>
        <div class="form-group">
          <label for="name" class="form-label">Name</label> <br>
          <input type="text" name="name" id="name" class="form-control" placeholder="enter your name">
        </div>
        <div class="form-group">
          <label for="ssn" class="form-label">SSN</label> <br>
          <input type="text" name="ssn" id="ssn" class="form-control" placeholder="enter your social security number(SSN)">
        </div>
        <% if(userType === "user"){ %>
          <div class="form-group">
            <label for="gender" class="form-label">Gender</label> <br>
            <input type="radio" name="gender" id="gender" class="form-control" value="male"> Male 
            <input type="radio" name="gender" id="gender" class="form-control" value="female"> Female 
            <input type="radio" name="gender" id="gender" class="form-control" value="other"> other
          </div>
        <% } %>
        <div class="form-group">
          <label for="address" class="form-label">Address</label> <br>
          <textarea name="address" id="address" class="form-control" placeholder="enter your address" rows="7"></textarea>
        </div>
        <div class="form-group">
          <label for="nationality" class="form-label">Nationality</label> <br>
          <input type="text" name="nationality" id="nationality" class="form-control" placeholder="enter your nationality">
        </div>
        <div class="form-group">
          <label for="phone" class="form-label">Phone</label> <br>
          <input type="text" name="phone" id="phone" class="form-control" placeholder="enter your phone number">
        </div>
        <div class="form-group">
          <label for="email" class="form-label">Email</label> <br>
          <input type="email" name="email" id="email" class="form-control" placeholder="enter your email ID">
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label> <br>
          <input type="password" name="password" id="password" class="form-control" placeholder="enter your password">
        </div>
        <div class="form-group">
          <label for="confirm-password" class="form-label">Confirm Password</label> <br>
          <input type="password" name="confirm-password" id="confirm-password" class="form-control">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-success">Register</button>
          <button type="reset" class="btn btn-danger">Cancel</button>
        </div>
      </form>
    </div>
    <div>
      <h4>OR</h4>
      <p>
        already registered? log in <a href="<% if(userType === 'user'){ %>/login<% }else{ %>/host/login<% } %>">here</a>
      </p>
    </div>
  </section>
</main>

<%- include("./footer.ejs") %>