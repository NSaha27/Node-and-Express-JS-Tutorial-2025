<%- include("./header.ejs") %>
<%- include("./navbar.ejs") %>
    <li class="nav-item"><a href="/accomodation" class="nav-link nav-link decoration-0 block py-2 px-6 text-white font-bold hover:bg-white hover:text-purple-500">Accomodations</a></li>
    <li class="nav-item"><a href="/host/registration" class="nav-link nav-link decoration-0 block py-2 px-6 text-white font-bold hover:bg-white hover:text-purple-500">Want to be a host?</a></li>
    <li class="nav-item"><a href="/registration" class="nav-link nav-link decoration-0 block py-2 px-6 text-white font-bold hover:bg-white hover:text-purple-500">Register/Log In</a></li>
  </ul>
</nav>
<main class="main w-full p-8">
  <section class="sec w-full min-h-screen p-4" id="sec1">
    <h1 class="page-title text-center text-3xl font-bold text-purple-500 capitalize"><%= pageTitle %></h1>
    <div class="w-3/5 mx-auto border-2 rounded-2xl mt-4 p-6">
      <h4 class="font-bold">Enter the follwing details -</h4>
      <form action="<% if(userType === 'user'){ %>/login<% }else{ %>/host/login<% } %>" method="post">
        <div class="form-group w-full my-3">
          <label for="username" class="form-label ml-1 font-semibold">Username</label> <br>
          <input type="text" name="username" id="username" class="form-control w-full border-2 rounded p-2 mt-1" placeholder="enter your username">
        </div>
        <div class="form-group w-full my-3">
          <label for="password" class="form-label ml-1 font-semibold">Password</label> <br>
          <input type="password" name="password" id="password" class="form-control w-full border-2 rounded p-2 mt-1" placeholder="enter your password">
        </div>
        <div class="form-group w-full my-3">
          <button type="submit" class="btn w-full text-center p-2 mt-3 rounded bg-purple-500 text-white cursor-pointer hover:bg-purple-600 font-bold">Log In</button>
        </div>
      </form>
      <div class="w-full my-3">
        <h4 class="text-center font-bold">OR</h4>
        <div class="mt-3 text-center font-semibold">
          not yet registered? register <a href="<% if(userType === 'user'){ %>/registration<% }else{ %>/host/registration<% } %>" class="text-purple-600">here</a>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include("./footer.ejs") %>