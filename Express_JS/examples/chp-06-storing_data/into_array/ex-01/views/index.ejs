<%- include("./header.ejs") %>
<%- include("./navbar.ejs") %>
    <li class="float-left"><a href="/host/add-accomodation" class="decoration-0 block py-2 px-4 text-white hover:bg-white hover:text-pink-700 font-bold">Add Accomodation</a></li>
  </ul>
</nav>
<main class="w-full min-h-screen">
  <section class="w-full p-12">
    <h1 class="text-4xl text-center mb-10  font-bold capitalize text-pink-700">Popular Homes</h1>
    <div class="accomodation-list py-3 grid grid-cols-3 gap-2">
      <% if(accomodations.length > 0){ %>
      <% accomodations.map((acc, indx, arr) => { %>
        <div class="card w-sm border-2 rounded-lg overflow-hidden shadow-xl/30">
          <img src="images/<%= acc.imageURL %>" alt="image of home in <%= acc.location %>" class="w-full">
          <div class="py-5 grid grid-cols-3 gap-2">
            <div class="px-3 col-span-2 leading-8">
              <h3 class="text-xl font-bold text-pink-700 capitalize"><%= acc.buildingName %></h3>
              <h4 class="text-md font-semibold">Home in <%= acc.location %></h4>
              <p class="text-md"><span class="text-pink-700 font-semibold">Rs.<%= acc.price %></span> for 1 night <span class="font-semibold">‚≠ê<%= acc.rating %></span></p>
            </div>
            <div class="px-3 flex justify-center items-center">
              <a href="" class="py-2 px-4  bg-yellow-500 text-black font-semibold">Book</a>
            </div>
          </div>
        </div>
      <% }) %>
      <% }else{ %>
        <h2 class="text-2xl font-semibold text-red-700">Sorry, no accomodation is available yet!</h2>
      <% } %>
    </div>
  </section>
</main>

<%- include("./footer.ejs") %>